<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.daniel.rufasttrack"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.daniel.rufasttrack.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.daniel.rufasttrack.CampusOneActivity" />
        <activity android:name="com.example.daniel.rufasttrack.LocationOneActivity" />
        <activity android:name="com.example.daniel.rufasttrack.CampusTwoActivity" />
        <activity android:name="com.example.daniel.rufasttrack.LocationTwoActivity" />
        <activity android:name="com.example.daniel.rufasttrack.NextBusAPI" />
        <activity android:name="com.example.daniel.rufasttrack.DirectionsActivity" />
        <activity android:name="com.example.daniel.rufasttrack.RouteActivity" />
    </application>

</manifest>